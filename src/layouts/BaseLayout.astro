---
import { ClientRouter } from "astro:transitions";
import Header from "../components/Header.astro";
import "../styles/global.css";
import ThemeManager from "../components/ThemeManager.astro";

const { pageTitle } = Astro.props;
---

<html lang="en" class="transition">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="shortcut icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <meta name="apple-mobile-web-app-title" content="Iceship" />
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>
    <ThemeManager defaultTheme="auto" />
    <ClientRouter />
  </head>
  <body class="min-h-screen flex flex-col">
    <Header />
    <main class="mx-auto px-4 sm:px-6 lg:px-8 py-12 grow max-w-5xl">
      <slot />
    </main>
  </body>
</html>
